<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<View xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gluonapplication.views.QuestionPresenter2">
   <top>
      <TextArea fx:id="qText" editable="false" prefHeight="200.0" prefWidth="258.0" wrapText="true" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="hintText" editable="false" prefHeight="64.0" prefWidth="258.0" wrapText="true" />
            <HBox alignment="TOP_CENTER">
               <children>
                  <Button fx:id="back" mnemonicParsing="false" onAction="#goback" text="Back" />
                  <Button fx:id="submit" mnemonicParsing="false" onAction="#Submit" text="Submit" />
                  <Button fx:id="result" mnemonicParsing="false" onAction="#piechart" text="Result" />
                  <Button fx:id="hintButton" mnemonicParsing="false" onAction="#hintAction" text="Hint" />
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
   <center>
      <ScrollPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <content>
            <VBox spacing="20.0">
               <children>
                  <CheckBox fx:id="CheckA" mnemonicParsing="false" text="A:" wrapText="true" />
                  <CheckBox fx:id="CheckB" mnemonicParsing="false" text="B:" wrapText="true" />
                  <CheckBox fx:id="CheckC" alignment="CENTER" mnemonicParsing="false" text="C:" wrapText="true" />
                  <CheckBox fx:id="CheckD" alignment="CENTER" mnemonicParsing="false" text="D:" wrapText="true" />
                  <CheckBox fx:id="CheckE" alignment="CENTER" mnemonicParsing="false" text="E:" wrapText="true" />
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</View>
